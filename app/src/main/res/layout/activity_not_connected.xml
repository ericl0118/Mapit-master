<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/mapitbutton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="Mapit"
        android:background="@drawable/mapit_button"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        style="@style/Base.TextAppearance.AppCompat.Caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You are not connected"
        android:id="@+id/notconnected"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/mapitbutton"
        android:layout_centerHorizontal="true"
        android:textColor="#9d9a9a" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Sign up"
        android:id="@+id/sign_up_button"
        android:layout_marginTop="46dp"
        android:textColor="#000dff"
        android:layout_below="@+id/notconnected"
        android:layout_alignEnd="@+id/notconnected" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Sign in"
        android:id="@+id/sign_in_button"
        android:textColor="#000dff"
        android:layout_alignBottom="@+id/or"
        android:layout_alignStart="@+id/notconnected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="or"
        android:id="@+id/or"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignBottom="@+id/sign_up_button"
        android:textSize="20dp" />

</RelativeLayout>
